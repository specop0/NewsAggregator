{
  "openapi": "3.0.1",
  "info": {
    "title": "news-aggregator",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "/news"
    }
  ],
  "paths": {
    "/api/News": {
      "get": {
        "tags": [
          "News"
        ],
        "summary": "Gets the news.",
        "operationId": "getNews",
        "parameters": [
          {
            "name": "isLatest",
            "in": "query",
            "description": "`true` if latest news shall be returned, `false` otherwise. Default is `true`.",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the news.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/News"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "News": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          },
          "imageUrl": {
            "type": "string",
            "nullable": true
          },
          "imageData": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}