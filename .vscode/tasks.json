{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build & run",
            "type": "shell",
            "command": "docker compose up --build --wait",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "docker build . --target test --tag newsaggregator-test && docker run --rm -it newsaggregator-test",
            "group": "test"
        },
        {
            "label": "npm install",
            "command": "npm",
            "type": "process",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/NewsAggregator.App"
            },
            "problemMatcher": "$eslint-compact",
            "hide": true
        },
        {
            "label": "npm start",
            "command": "npm",
            "type": "process",
            "args": [
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}/NewsAggregator.App"
            },
            "problemMatcher": "$eslint-compact",
            "group": "build",
            "dependsOn": [
                "npm install"
            ]
        },
        {
            "label": "npm test",
            "command": "npm",
            "type": "process",
            "args": [
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/NewsAggregator.App"
            },
            "problemMatcher": "$eslint-compact",
            "group": "build"
        },
        {
            "label": "dotnet run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "NewsAggregator.csproj",
                "--environment",
                "DOTNET_ENVIRONMENT=Development"
            ],
            "options": {
                "cwd": "${workspaceFolder}/NewsAggregator"
            },
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "dotnet test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "NewsAggregator.Tests.csproj"
            ],
            "options": {
                "cwd": "${workspaceFolder}/NewsAggregator.Tests"
            },
            "problemMatcher": "$msCompile",
            "group": "test"
        }
    ]
}