{
  "openapi": "3.1.1",
  "info": {
    "title": "NewsAggregator | v1",
    "version": "1.0.0"
  },
  "paths": {
    "/api/News": {
      "post": {
        "tags": [
          "News"
        ],
        "summary": "Gets the news.",
        "operationId": "getNews",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "type": "null"
                  },
                  {
                    "$ref": "#/components/schemas/GetNewsRequest"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetNewsResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GetNewsRequest": {
        "type": "object",
        "properties": {
          "isLatest": {
            "type": "boolean",
            "description": "'true' if latest news shall be returned, 'false' otherwise. Default is 'false'"
          }
        }
      },
      "GetNewsResponse": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/News"
            }
          }
        },
        "description": "The news."
      },
      "News": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          },
          "imageData": {
            "type": "string"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "News"
    }
  ]
}